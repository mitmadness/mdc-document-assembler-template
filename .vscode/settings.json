// Ceci est une configuration partagée pour tous les utilisateurs sous VS Code.
// Si vous souhaitez changer un paramètre pour une question de préférence personnelle, et que cela ne contrevient pas
// aux règles de style définies pour le projet, merci de changer le settings.json de votre compte utilisateur et non
// celui-ci.
{
  "angular.enable-strict-mode-prompt": false,
  "editor.folding": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.rulers": [
    120
  ],
  "editorconfig.generateAuto": false,
  "files.eol": "\n",
  "files.exclude": {
    ".angular": true,
    ".idea": true,
    "dist": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "importSorter.generalConfiguration.sortOnBeforeSave": true,
  "importSorter.importStringConfiguration.maximumNumberOfImportExpressionsPerLine.count": 120,
  "importSorter.sortConfiguration.customOrderingRules.defaultNumberOfEmptyLinesAfterGroup": 0,
  "importSorter.sortConfiguration.customOrderingRules.rules": [
    {
      "disableSort": true,
      "orderLevel": 10,
      "regex": "^$",
      "type": "importMember"
    },
    {
      "orderLevel": 20,
      "regex": "^[.]"
    }
  ],
  "importSorter.sortConfiguration.removeUnusedDefaultImports": true,
  "importSorter.sortConfiguration.removeUnusedImports": true,
  "javascript.format.semicolons": "insert",
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.importModuleSpecifierEnding": "minimal",
  "javascript.preferences.quoteStyle": "single",
  "sortJSON.contextMenu": {
    "sortJSONAlphaNum": false,
    "sortJSONAlphaNumReverse": false,
    "sortJSONKeyLength": false,
    "sortJSONKeyLengthReverse": false,
    "sortJSONReverse": false,
    "sortJSONType": false,
    "sortJSONTypeReverse": false,
    "sortJSONValues": false,
    "sortJSONValuesReverse": false
  },
  "typescript.format.semicolons": "insert",
  "typescript.locale": "en",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "typescript.preferences.quoteStyle": "single",
  "typescript.suggest.jsdoc.generateReturns": false
}
